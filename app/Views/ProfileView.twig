<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <title>Profile</title>
</head>
<body>

<div class="bg-gray-50 min-h-screen flex flex-col">
    <div class="py-5">
        <div class="grid grid-cols-2 gap-1">
            <div class="text-center sm:text-left whitespace-nowrap">
                <a href="/">
                    <button  class="transition duration-200 mx-5 px-5 py-4 cursor-pointer font-normal text-sm rounded-lg text-gray-500 hover:bg-gray-200 focus:outline-none focus:bg-gray-300 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 ring-inset">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline-block align-text-top">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        <span class="inline-block ml-1" >Back to home page</span>
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="top h-64 w-full bg-indigo-900 overflow-hidden relative" >
        <div class="flex flex-col justify-center items-center relative h-full bg-black bg-opacity-50 text-white">
            <img
                    {% if photo is null %}
                    src="/pictures/avatar.png"
                    {% else %}
                    src="{{ photo }}"
                    {% endif %}
                    class="h-24 w-24 object-cover rounded-full">
            <h1 class="text-2xl font-semibold">{{ session['username'] }}</h1>
        </div>
    </div>

    <div class="grid grid-cols-12 bg-gray-50  ">

        <div class="col-span-12 w-full px-3 py-6 justify-center flex space-x-4 border-b border-solid md:space-x-0 md:space-y-4 md:flex-col md:col-span-2 md:justify-start ">

            <a  class="text-sm p-2 bg-indigo-900 text-white text-center rounded font-bold">Basic Information</a>

            <a href="/photo" class="text-sm p-2 bg-indigo-200 text-center rounded font-semibold hover:bg-indigo-700 hover:text-gray-200">Add Photo</a>

        </div>

        <div class="col-span-12 md:border-solid md:border-l md:border-black md:border-opacity-25 h-full pb-12 md:col-span-10">
            <div class="px-4 pt-4">
                <form action="#" class="flex flex-col space-y-8">

                    <div>
                        <h3 class="text-2xl font-semibold">Basic Information</h3>
                        <hr>
                    </div>

                    <div class="form-item">
                        <label class="text-xl ">Username</label>
                        <input type="text" value="{{ session['username'] }}" class="w-500 appearance-none text-black text-opacity-50 rounded shadow py-1 px-2  mr-2 focus:outline-none focus:shadow-outline focus:border-blue-200" disabled>
                    </div>

                    <div class="flex flex-col space-y-4 md:space-y-0 md:flex-row md:space-x-4">

                        <div class="form-item w-full">
                            <label class="text-xl ">Gender</label>
                            <input type="text"
                                    {% if session['gender'] == 'm'  %}
                                   value="Male"
                                    {% endif %}
                                    {% if session['gender'] == 'f'  %}
                                        value="Female"
                                    {% endif %}
                                   class="w-50 appearance-none text-black text-opacity-50 rounded shadow py-1 px-2 mr-2 focus:outline-none focus:shadow-outline focus:border-blue-200 text-opacity-25 " disabled>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>